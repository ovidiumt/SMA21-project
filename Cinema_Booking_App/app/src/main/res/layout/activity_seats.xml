<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Seats">

    <ToggleButton
        android:id="@+id/A1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="3dp"
        android:background="#AAAAAA"
        android:checked="false"
        android:onClick="click"
        android:text="A1"
        android:textColor="#000000"
        android:textOff="A1"
        android:textOn="A1"
        app:layout_constraintBottom_toTopOf="@+id/A2"
        app:layout_constraintEnd_toStartOf="@+id/B1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/B1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="3dp"
        android:background="#AAAAAA"
        android:checked="false"
        android:onClick="click"
        android:text="B1"
        android:textColor="#000000"
        android:textOff="B1"
        android:textOn="B1"
        app:layout_constraintBottom_toTopOf="@+id/B2"
        app:layout_constraintEnd_toStartOf="@id/C1"
        app:layout_constraintStart_toEndOf="@id/A1"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/C1"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:background="#AAAAAA"
        android:checked="false"
        android:onClick="click"
        android:text="C1"
        android:textColor="#000000"
        android:textOff="C1"
        android:textOn="C1"
        app:layout_constraintBottom_toTopOf="@+id/C2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/B1"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/A2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:background="#AAAAAA"
        android:checked="false"
        android:onClick="click"
        android:text="A2"
        android:textColor="#000000"
        android:textOff="A2"
        android:textOn="A2"
        app:layout_constraintBottom_toTopOf="@+id/A3"
        app:layout_constraintEnd_toStartOf="@+id/B2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A1" />

    <ToggleButton
        android:id="@+id/B2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:background="#AAAAAA"
        android:checked="false"
        android:onClick="click"
        android:text="B2"
        android:textColor="#000000"
        android:textOff="B2"
        android:textOn="B2"
        app:layout_constraintBottom_toTopOf="@+id/B3"
        app:layout_constraintEnd_toStartOf="@+id/C2"
        app:layout_constraintStart_toEndOf="@+id/A2"
        app:layout_constraintTop_toBottomOf="@+id/B1" />

    <ToggleButton
        android:id="@+id/C2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:background="#AAAAAA"
        android:checked="false"
        android:onClick="click"
        android:text="C2"
        android:textColor="#000000"
        android:textOff="C2"
        android:textOn="C2"
        app:layout_constraintBottom_toTopOf="@+id/C3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/B2"
        app:layout_constraintTop_toBottomOf="@+id/C1" />

    <ToggleButton
        android:id="@+id/A3"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:background="#AAAAAA"
        android:checked="false"
        android:onClick="click"
        android:text="A3"
        android:textColor="#000000"
        android:textOff="A3"
        android:textOn="A3"
        app:layout_constraintEnd_toStartOf="@+id/B3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A2" />

    <ToggleButton
        android:id="@+id/B3"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:background="#AAAAAA"
        android:checked="false"
        android:onClick="click"
        android:text="B3"
        android:textColor="#000000"
        android:textOff="B3"
        android:textOn="B3"
        app:layout_constraintEnd_toStartOf="@+id/C3"
        app:layout_constraintStart_toEndOf="@+id/A3"
        app:layout_constraintTop_toBottomOf="@+id/B2" />

    <ToggleButton
        android:id="@+id/C3"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:background="#AAAAAA"
        android:checked="false"
        android:onClick="click"
        android:text="C3"
        android:textColor="#000000"
        android:textOff="C3"
        android:textOn="C3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/B3"
        app:layout_constraintTop_toBottomOf="@+id/C2" />

    <Button
        android:id="@+id/buttonConfirmSeats"
        android:layout_width="158dp"
        android:layout_height="61dp"
        android:checked="false"
        android:text="Confirm seats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B3"
        app:layout_constraintVertical_bias="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>